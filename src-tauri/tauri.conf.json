  {
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
      "withGlobalTauri": true,
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "devPath": "http://localhost:1420/",
      "distDir": "../dist/"
    },
    "package": {
      "productName": "Pm_manager",
      "version": "0.1.2"
    },
    "tauri": {
      "allowlist": {
        "all": false,
        "fs": {
          "all": false,
          "copyFile": false,
          "createDir": true,
          "exists": true,
          "readDir": true,
          "readFile": true,
          "removeDir": false,
          "removeFile": false,
          "renameFile": false,
          "scope": [
            "$APPCONFIG/**/*", 
            "$APPCONFIG/*", 
            "$APPCONFIG", 
            "$DOCUMENT/**/*", 
            "$DOCUMENT/*", 
            "$DOCUMENT", 
            "$DOWNLOAD/**/*", 
            "$DOWNLOAD/*", 
            "$DOWNLOAD", 
            "$PICTURE/**/*",
            "$PICTURE/*",
            "$PICTURE",
            "$DESKTOP/**/*", 
            "$DESKTOP/*", 
            "$DESKTOP", 
            "$AUDIO/**/*",
            "$AUDIO/*",
            "$AUDIO",
            "$HOME/**/*", 
            "$HOME/*", 
            "$HOME"
          ],
          "writeFile": true
        },
        "path": {
          "all": true
        },
        "window": {
          "all": false,
          "center": false,
          "close": false,
          "create": false,
          "hide": false,
          "maximize": false,
          "minimize": false,
          "print": false,
          "requestUserAttention": false,
          "setAlwaysOnTop": false,
          "setClosable": false,
          "setContentProtected": false,
          "setCursorGrab": true,
          "setCursorIcon": false,
          "setCursorPosition": false,
          "setCursorVisible": false,
          "setDecorations": false,
          "setFocus": false,
          "setFullscreen": false,
          "setIcon": false,
          "setIgnoreCursorEvents": false,
          "setMaxSize": false,
          "setMaximizable": false,
          "setMinSize": false,
          "setMinimizable": false,
          "setPosition": false,
          "setResizable": false,
          "setSize": false,
          "setSkipTaskbar": false,
          "setTitle": false,
          "show": false,
          "startDragging": true,
          "unmaximize": false,
          "unminimize": false
        }
      },
      "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "copyright": "",
        "deb": {
          "depends": []
        },
        "externalBin": [],
        "icon": [
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ],
        "identifier": "com.yourcompany.projectname",
        "longDescription": "",
        "macOS": {
          "entitlements": null,
          "exceptionDomain": "",
          "frameworks": [],
          "providerShortName": null,
          "signingIdentity": null
        },
        "resources": [],
        "shortDescription": "",
        "targets": "all",
        "windows": {
          "webviewInstallMode": {
            "silent": false,
            "type": "embedBootstrapper"
          },
          "certificateThumbprint": null,
          "digestAlgorithm": "sha256",
          "timestampUrl": ""
        }
      },
      "security": {
        "csp": null
      },
      "updater": {
        "active": false
      },
      "windows": [
        {
          "fullscreen": false,
          "resizable": true,
          "title": "pm_manager",
          "height": 720,
          "width": 1280
        }
      ]
